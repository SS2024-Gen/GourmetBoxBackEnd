CREATE TABLE producto(
	id_producto INT PRIMARY KEY AUTO_INCREMENT,
	nombre_producto VARCHAR(50) NOT NULL,
	descripcion_roducto VARCHAR(200) NOT NULL,
	categoria VARCHAR(15) NOT NULL,
	img_roducto VARCHAR(50) NOT NULL,
	precio_producto DOUBLE NOT NULL
); 

CREATE TABLE suscripcion(
    id_suscripcion INT PRIMARY KEY AUTO_INCREMENT,
    nombre_plan VARCHAR(100) NOT NULL,
    descripcion_plan VARCHAR(200) NOT NULL,
    precio DOUBLE NOT NULL,
    img_puscripcion VARCHAR(50) NOT NULL
);

CREATE TABLE usuario(
    id_usuario INT PRIMARY KEY AUTO_INCREMENT,
    nombre_usuario VARCHAR(50) NOT NULL,
    user_name VARCHAR(50) NOT NULL,
    contrasena VARCHAR(200) NOT NULL,
    correo VARCHAR(50) NOT NULL,
    telefono VARCHAR(50) NOT NULL,
    es_admistrador BIT NOT NULL,
    suscripcion_id INT,
    FOREIGN KEY (suscripcionId) REFERENCES suscripcion(idSuscripcion)
);

CREATE TABLE resumenCompra(
    id_resumenCompra INT PRIMARY KEY AUTO_INCREMENT,
    usuario_id INT NOT NULL,
    precio_total_productos DOUBLE ,
    precio_domicilio DOUBLE ,
    precio_total DOUBLE ,
    en_proceso BIT NOT NULL,
    fecha_resumen_compra DATETIME,
    FOREIGN KEY (usuario_id) REFERENCES usuario(id_usuario)
);

CREATE TABLE productosagregados (
	id_productos_agregados INT PRIMARY KEY AUTO_INCREMENT,
	usuario_id INT(10) NOT NULL,
	producto_id INT(10) NOT NULL,
	cantidad_producto INT(10) NOT NULL,
	subtotal DOUBLE NOT NULL,
	resumen_compra_id INT(10) NOT NULL,
	FOREIGN KEY (usuario_id) REFERENCES usuario(idUsuario),
	FOREIGN KEY (productoId) REFERENCES producto(idProducto),
	FOREIGN KEY (resumen_compra_id) REFERENCES resumenCompra(id_resumen_compra)
);




